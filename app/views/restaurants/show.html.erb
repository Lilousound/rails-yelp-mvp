
<h1><%= @restaurant.name%></h1>
<div class="m-5">
  <p>🏠 &nbsp <%= @restaurant.address %></p>
  <p>📞 &nbsp <%= @restaurant.phone_number %></p>
  <p>🥣 &nbsp <%= @restaurant.category %></p>

  <p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
  <p class="mt-3">⭐️ &nbsp <%= review.rating %></li></p>
    <li class="list-group-item"><%= review.content %></li>

  <% end %>
</ul>
<div class="mt-4">
  <%= link_to  "Add a Review", new_restaurant_review_path(@restaurant), :class=>"btn btn-outline-dark" %>
</div>
<br>
</div>

<div class="mt-4">
<h2><%= link_to "🔙", restaurants_path %></h2>
</div>
